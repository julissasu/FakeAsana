<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Asana.Maui.MainPage"
             NavigatedTo="ContentPage_NavigatedTo"
             NavigatedFrom="ContentPage_NavigatedFrom"
             Title="Task Manager">
       <ScrollView>
              <VerticalStackLayout
                     Padding="20"
                     Spacing="20">
                     <Grid>
                            <Grid.RowDefinitions>
                                   <RowDefinition Height="Auto"/>
                                   <RowDefinition Height="*"/>
                                   <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Tool Bar-->
                            <Grid Grid.Row="0"
                                  RowSpacing="10"
                                  Padding="0,0,0,10">
                                   <Grid.ColumnDefinitions>
                                          <ColumnDefinition Width="2*"/>
                                          <ColumnDefinition Width="Auto"/>
                                          <ColumnDefinition Width="5*"/>
                                   </Grid.ColumnDefinitions>
                                   <Label Grid.Column="0"
                                          Text="Show Completed Tasks:"
                                          VerticalOptions="Center"
                                          FontSize="14"/>
                                   <CheckBox Grid.Column="1"
                                             IsChecked="{Binding IsShowCompleted}"
                                             VerticalOptions="Center"
                                             Margin="10,0"/>
                                   <Grid Grid.Column="2">
                                          <Grid.ColumnDefinitions>
                                                 <ColumnDefinition Width="*"/>
                                                 <ColumnDefinition Width="Auto"/>
                                          </Grid.ColumnDefinitions>
                                          <Entry Grid.Column="0"
                                                 Text="{Binding Query}"
                                                 Placeholder="Search tasks..."
                                                 FontSize="14"/>
                                          <Button Grid.Column="1"
                                                  Text="Search"
                                                  Clicked="SearchClicked"
                                                  Margin="10,0,0,0"/>
                                   </Grid>
                            </Grid>

                            <!-- ToDo List-->
                            <ListView
                                   Grid.Row="1"
                                   ItemsSource="{Binding ToDos}"
                                   SelectedItem="{Binding SelectedToDo}"
                                   RowHeight="120"
                                   VerticalOptions="FillAndExpand">
                                   <ListView.ItemTemplate>
                                          <DataTemplate>
                                                 <ViewCell>
                                                        <Grid Padding="15,10"
                                                              RowSpacing="8">
                                                               <Grid.ColumnDefinitions>
                                                                      <ColumnDefinition Width="Auto"/>
                                                                      <ColumnDefinition Width="*"/>
                                                               </Grid.ColumnDefinitions>
                                                               <Grid.RowDefinitions>
                                                                      <RowDefinition Height="Auto"/>
                                                                      <RowDefinition Height="Auto"/>
                                                                      <RowDefinition Height="Auto"/>
                                                               </Grid.RowDefinitions>

                                                               <CheckBox IsChecked="{Binding Model.IsComplete}"
                                                                         Grid.Column="0"
                                                                         Grid.RowSpan="3"
                                                                         VerticalOptions="Center"
                                                                         Margin="0,0,15,0"/>

                                                               <Label Grid.Column="1"
                                                                      Grid.Row="0"
                                                                      Text="{Binding Model.Name}"
                                                                      FontAttributes="Bold"
                                                                      FontSize="16"
                                                                      TextColor="Red"/>

                                                               <Label Grid.Column="1"
                                                                      Grid.Row="1"
                                                                      Text="{Binding Model.Description}"
                                                                      FontSize="14"
                                                                      TextColor="Gray"
                                                                      Margin="0,5,0,5"/>

                                                               <StackLayout Grid.Column="1"
                                                                            Grid.Row="2"
                                                                            Orientation="Horizontal"
                                                                            Spacing="15">
                                                                      <Label Text="{Binding Model.Priority, StringFormat='Priority: {0}'}"
                                                                             FontSize="12"
                                                                             TextColor="DarkBlue"/>
                                                                      <Label Text="{Binding Model.DueDate, StringFormat='Due: {0:MMM dd}'}"
                                                                             FontSize="12"
                                                                             TextColor="DarkGreen"/>
                                                                      <Label Text="{Binding ProjectDisplayName}"
                                                                             FontSize="12"
                                                                             TextColor="Blue"
                                                                             IsVisible="{Binding HasProject}"/>
                                                               </StackLayout>
                                                        </Grid>
                                                 </ViewCell>
                                          </DataTemplate>
                                   </ListView.ItemTemplate>
                            </ListView>

                            <!-- Button Bar -->
                            <VerticalStackLayout Grid.Row="2"
                                                 Spacing="10"
                                                 Padding="0,20,0,0">
                                   <Button Text="Add New ToDo"
                                           Clicked="AddNewClicked"/>
                                   <Button Text="Edit Selected ToDo"
                                           Clicked="EditClicked"/>
                                   <Button Text="Delete Selected ToDo"
                                           Clicked="DeleteClicked"/>
                                   <Button Text="Manage Projects"
                                           Clicked="ProjectClicked"/>
                            </VerticalStackLayout>
                     </Grid>
              </VerticalStackLayout>
       </ScrollView>
</ContentPage>