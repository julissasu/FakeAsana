<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Asana.Maui.ProjectsView"
             Title="Projects"
             NavigatedTo="ContentPage_NavigatedTo">
    <VerticalStackLayout Padding="20"
                         Spacing="15">

        <Label Text="Projects"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center"/>

        <!-- Add Project Form (Collapsible) -->
        <Frame IsVisible="{Binding ShowAddForm}"
               BackgroundColor="#f0f0f0"
               BorderColor="#34C759"
               CornerRadius="10"
               Padding="15">
            <VerticalStackLayout Spacing="10">
                <Grid ColumnDefinitions="*,Auto">
                    <Label Grid.Column="0"
                           Text="Add New Project"
                           FontSize="18"
                           FontAttributes="Bold"
                           VerticalOptions="Center"/>
                    <Button Grid.Column="1"
                            Text="âœ•"
                            Clicked="CloseFormClicked"
                            BackgroundColor="Transparent"
                            TextColor="#34C759"
                            FontSize="16"
                            WidthRequest="30"
                            HeightRequest="30"/>
                </Grid>

                <Entry x:Name="ProjectNameEntry"
                       Placeholder="Project Name"
                       FontSize="16"/>

                <Entry x:Name="ProjectDescriptionEntry"
                       Placeholder="Project Description (Optional)"
                       FontSize="16"/>

                <Button Text="Create Project"
                        Clicked="CreateProjectClicked"
                        BackgroundColor="#34C759"
                        TextColor="White"
                        HeightRequest="45"
                        CornerRadius="8"
                        Margin="0,10,0,0"/>
            </VerticalStackLayout>
        </Frame>

        <ListView ItemsSource="{Binding Projects}"
                  SelectedItem="{Binding SelectedProject}"
                  RowHeight="120"
                  VerticalOptions="FillAndExpand">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid Padding="15,10"
                              RowSpacing="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Label Grid.Column="0"
                                   Grid.Row="0"
                                   Text="{Binding Model.Id}"
                                   FontAttributes="Bold"
                                   FontSize="16"
                                   VerticalOptions="Center"
                                   Margin="0,0,15,0"/>

                            <Label Grid.Column="1"
                                   Grid.Row="0"
                                   Text="{Binding Model.Name}"
                                   FontAttributes="Bold"
                                   FontSize="16"
                                   TextColor="Green"/>

                            <Label Grid.Column="1"
                                   Grid.Row="1"
                                   Text="{Binding Model.Description}"
                                   FontSize="14"
                                   TextColor="Gray"
                                   Margin="0,5,0,0"/>

                            <Label Grid.Column="1"
                                   Grid.Row="2"
                                   Text="{Binding TaskSummary}"
                                   FontSize="12"
                                   TextColor="Blue"
                                   Margin="0,5,0,0"/>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <VerticalStackLayout Spacing="10">
            <Button Text="Add New Project"
                    Clicked="AddNewProjectClicked"/>
            <Button Text="Delete Selected Project"
                    Clicked="DeleteProjectClicked"/>
            <Button Text="Back to Tasks"
                    Clicked="BackToMainClicked"/>
        </VerticalStackLayout>

    </VerticalStackLayout>
</ContentPage>