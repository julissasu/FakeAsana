<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Asana.Maui.ProjectsView"
             Title="Projects"
             NavigatedTo="ContentPage_NavigatedTo">
    <VerticalStackLayout Padding="20"
                         Spacing="15">

        <Label Text="Projects"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center"/>

        <!-- Add Project Form (Collapsible) -->
        <VerticalStackLayout IsVisible="{Binding ShowAddForm}"
                             Spacing="15"
                             Padding="20"
                             Margin="0,0,0,15">

            <Grid ColumnDefinitions="*,Auto"
                  Margin="0,0,0,10">
                <Label Grid.Column="0"
                       Text="Add New Project"
                       FontSize="18"
                       FontAttributes="Bold"
                       VerticalOptions="Center"/>
                <Button Grid.Column="1"
                        Text="âœ•"
                        Clicked="CloseFormClicked"
                        BackgroundColor="Transparent"
                        TextColor="Red"
                        FontSize="16"
                        WidthRequest="30"
                        HeightRequest="30"/>
            </Grid>

            <Grid RowSpacing="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Text="Name:"
                       Grid.Column="0"
                       Grid.Row="0"
                       VerticalOptions="Center"
                       FontSize="16"/>
                <Entry x:Name="ProjectNameEntry"
                       Grid.Column="1"
                       Grid.Row="0"
                       Placeholder="Project Name"
                       FontSize="16"/>

                <Label Text="Description:"
                       Grid.Column="0"
                       Grid.Row="1"
                       VerticalOptions="Center"
                       FontSize="16"/>
                <Entry x:Name="ProjectDescriptionEntry"
                       Grid.Column="1"
                       Grid.Row="1"
                       Placeholder="Project Description (Optional)"
                       FontSize="16"/>
            </Grid>

            <VerticalStackLayout Spacing="10"
                                 Margin="0,10,0,0">
                <Button Text="Create Project"
                        Clicked="CreateProjectClicked"
                        BackgroundColor="Green"
                        TextColor="White"
                        HeightRequest="45"
                        CornerRadius="8"/>
                <Button Text="Cancel"
                        Clicked="CloseFormClicked"
                        BackgroundColor="Gray"
                        TextColor="White"
                        HeightRequest="45"
                        CornerRadius="8"/>
            </VerticalStackLayout>
        </VerticalStackLayout>

        <ListView ItemsSource="{Binding Projects}"
                  SelectedItem="{Binding SelectedProject}"
                  RowHeight="120"
                  VerticalOptions="FillAndExpand">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid Padding="15,10"
                              RowSpacing="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Label Grid.Column="0"
                                   Grid.Row="0"
                                   Text="{Binding Model.Id}"
                                   FontAttributes="Bold"
                                   FontSize="16"
                                   VerticalOptions="Center"
                                   Margin="0,0,15,0"/>

                            <Label Grid.Column="1"
                                   Grid.Row="0"
                                   Text="{Binding Model.Name}"
                                   FontAttributes="Bold"
                                   FontSize="16"
                                   TextColor="Green"/>

                            <Label Grid.Column="1"
                                   Grid.Row="1"
                                   Text="{Binding Model.Description}"
                                   FontSize="14"
                                   TextColor="Gray"
                                   Margin="0,5,0,0"/>

                            <Label Grid.Column="1"
                                   Grid.Row="2"
                                   Text="{Binding TaskSummary}"
                                   FontSize="12"
                                   TextColor="blue"
                                   Margin="0,5,0,0"/>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <VerticalStackLayout Spacing="10">
            <Button Text="Add New Project"
                    Clicked="AddNewProjectClicked"/>
            <Button Text="Delete Selected Project"
                    Clicked="DeleteProjectClicked"/>
            <Button Text="Back to Tasks"
                    Clicked="BackToMainClicked"/>
        </VerticalStackLayout>

    </VerticalStackLayout>
</ContentPage>