<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Asana.Maui.View.ProjectsView"
             Title="Manage Projects">

    <Grid RowDefinitions="Auto,*"
          Padding="20">

        <!-- Header -->
        <VerticalStackLayout Grid.Row="0"
                             Spacing="15"
                             Margin="0,0,0,20">
            <Label Text="Project Management"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#2c3e50"/>

            <Button Text="Refresh"
                    Command="{Binding RefreshCommand}"
                    BackgroundColor="#6c757d"
                    TextColor="White"
                    WidthRequest="120"
                    HeightRequest="40"
                    CornerRadius="20"
                    HorizontalOptions="Center"/>
        </VerticalStackLayout>

        <!-- Projects ListView -->
        <Frame Grid.Row="1"
               BackgroundColor="White"
               CornerRadius="12"
               Padding="15"
               BorderColor="#e9ecef">

            <ListView ItemsSource="{Binding Projects}"
                      HasUnevenRows="True"
                      SeparatorVisibility="None"
                      VerticalOptions="Fill">

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Frame Margin="0,5"
                                   Padding="15"
                                   BackgroundColor="#f8f9fa"
                                   BorderColor="#dee2e6"
                                   CornerRadius="10">

                                <Grid RowDefinitions="Auto,Auto,Auto,Auto"
                                      ColumnDefinitions="*,Auto">

                                    <!-- Project Name -->
                                    <Label Grid.Row="0"
                                           Grid.Column="0"
                                           Text="{Binding Name}"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           TextColor="#2c3e50"/>

                                    <!-- Project Description -->
                                    <Label Grid.Row="1"
                                           Grid.Column="0"
                                           Text="{Binding Description}"
                                           FontSize="14"
                                           TextColor="Gray"/>

                                    <!-- Task Count -->
                                    <Label Grid.Row="2"
                                           Grid.Column="0"
                                           FontSize="12"
                                           TextColor="#007AFF"
                                           Margin="0,5,0,0">
                                        <Label.Text>
                                            <MultiBinding StringFormat="{}{0} tasks ({1}% complete)">
                                                <Binding Path="ToDos.Count"/>
                                                <Binding Path="CompletePercent"/>
                                            </MultiBinding>
                                        </Label.Text>
                                    </Label>

                                    <!-- Progress Bar -->
                                    <ProgressBar Grid.Row="3"
                                                 Grid.Column="0"
                                                 Progress="{Binding CompleteProgress}"
                                                 ProgressColor="#34C759"
                                                 HeightRequest="6"
                                                 Margin="0,5,0,0"/>

                                    <!-- Action Buttons -->
                                    <VerticalStackLayout Grid.Row="0"
                                                         Grid.Column="1"
                                                         Grid.RowSpan="4"
                                                         Spacing="5"
                                                         VerticalOptions="Center">
                                        <Button Text="View Tasks"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, 
                                                    Path=BindingContext.ViewProjectTasksCommand}"
                                                CommandParameter="{Binding .}"
                                                BackgroundColor="#007AFF"
                                                TextColor="White"
                                                FontSize="11"
                                                Padding="8,4"
                                                CornerRadius="5"/>

                                        <Button Text="Edit"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, 
                                                    Path=BindingContext.EditProjectCommand}"
                                                CommandParameter="{Binding .}"
                                                BackgroundColor="#FF9500"
                                                TextColor="White"
                                                FontSize="11"
                                                Padding="8,4"
                                                CornerRadius="5"/>

                                        <Button Text="Delete"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, 
                                                    Path=BindingContext.DeleteProjectCommand}"
                                                CommandParameter="{Binding .}"
                                                BackgroundColor="#FF3B30"
                                                TextColor="White"
                                                FontSize="11"
                                                Padding="8,4"
                                                CornerRadius="5"/>
                                    </VerticalStackLayout>
                                </Grid>
                            </Frame>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Frame>
    </Grid>
</ContentPage>